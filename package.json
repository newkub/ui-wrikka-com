{
  "name": "nuxt-design-system",
  "packageManager": "bun@1.3.2",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "workspaces": [
    "packages/*",
    "packages/nuxt-modules/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "format": "turbo format",
    "lint": "oxlint --fix",
    "prepare": "bunx lefthook install",
    "review": "bun format && bun lint && bun test && bun update:deps",
    "test": "turbo test",
    "update:deps": "bunx taze -r -w && bun install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "oxlint": "^1.28.0",
    "turbo": "latest",
    "typescript": "^5.9.3"
  }
}
